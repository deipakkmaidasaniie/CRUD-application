{{>header}}
<form action="/updateuser/{{user._id}}" method="post">
    FirstName<input type="text" name="fname" id="fname" value="{{user.firstname}}"><br>
    Lastname<input type="text" name="lname" id="lname" value="{{user.lastname}}"><br>
    email<input type="text" name="email" id="email" value="{{user.email}}"><br>
    Phone<input type="number" name="phno" id="phno" value="{{user.phoneno}}"><br>
    Age<input type="number" name="age" id="age" value="{{user.age}}"><br >
    Gender <input type="radio" name="gender" id="male" value="male">Male
    <input type="radio" name="gender" id="female" value="female" >Female 
    <br>
    Password<input type="password" name="password" id="password" value="{{user.password}}"><br>
    Confirm Password<input type="password" name="cpassword" id="cpassword"><br>
    <input type="submit" value="Update">

    
    

</form>

